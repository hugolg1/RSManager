<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Primary">#603588</Color>
    <Color x:Key="PrimaryLight">#f8f0ff</Color>
    <Color x:Key="Secundary">#3700b3</Color>
    <Color x:Key="Accent">#d39fff</Color>
    <Color x:Key="AccentDark">#9570b5</Color>
    <Color x:Key="Disabled">#efebf2</Color>

    <Color x:Key="BorderColor">#abadb3</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="SecundaryBrush" Color="{StaticResource Secundary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDark}"/>
    
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource Disabled}"/>    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

</ResourceDictionary>